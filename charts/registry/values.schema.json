{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/jrmatherly/mcp-registry-gateway/charts/registry/values.schema.json",
  "title": "MCP Registry Helm Chart Values",
  "description": "Schema for validating MCP Registry Helm chart values",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "description": "Global configuration shared across charts",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string",
              "description": "Container image repository",
              "default": "ghcr.io/jrmatherly/mcp-registry"
            },
            "tag": {
              "type": "string",
              "description": "Container image tag",
              "default": "latest"
            },
            "pullPolicy": {
              "type": "string",
              "enum": ["Always", "IfNotPresent", "Never"],
              "description": "Image pull policy",
              "default": "IfNotPresent"
            }
          }
        },
        "domain": {
          "type": "string",
          "description": "Base domain for all services"
        }
      }
    },
    "app": {
      "type": "object",
      "description": "Application configuration",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Application name",
          "default": "registry"
        },
        "replicas": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of pod replicas",
          "default": 1
        },
        "envSecretName": {
          "type": "string",
          "description": "Name of the secret containing environment variables"
        },
        "authServerUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL of the authentication server"
        },
        "secretKey": {
          "type": "string",
          "description": "Secret key for the application (required in production)"
        }
      }
    },
    "serviceAccount": {
      "type": "object",
      "description": "Service account configuration",
      "properties": {
        "create": {
          "type": "boolean",
          "description": "Whether to create a service account",
          "default": true
        },
        "annotations": {
          "type": "object",
          "description": "Annotations to add to the service account",
          "additionalProperties": {
            "type": "string"
          }
        },
        "name": {
          "type": "string",
          "description": "Name of the service account to use"
        }
      }
    },
    "service": {
      "type": "object",
      "description": "Kubernetes service configuration",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
          "description": "Service type",
          "default": "ClusterIP"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "description": "Service port",
          "default": 8000
        },
        "annotations": {
          "type": "object",
          "description": "Service annotations",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "resources": {
      "type": "object",
      "description": "Resource requests and limits",
      "properties": {
        "requests": {
          "type": "object",
          "properties": {
            "cpu": {
              "oneOf": [
                {"type": "string"},
                {"type": "integer"}
              ],
              "description": "CPU request"
            },
            "memory": {
              "type": "string",
              "description": "Memory request"
            }
          }
        },
        "limits": {
          "type": "object",
          "properties": {
            "cpu": {
              "oneOf": [
                {"type": "string"},
                {"type": "integer"}
              ],
              "description": "CPU limit"
            },
            "memory": {
              "type": "string",
              "description": "Memory limit"
            }
          }
        }
      }
    },
    "probes": {
      "type": "object",
      "description": "Health probe configuration",
      "properties": {
        "liveness": {
          "$ref": "#/$defs/probeConfig"
        },
        "readiness": {
          "$ref": "#/$defs/probeConfig"
        },
        "startup": {
          "$ref": "#/$defs/probeConfig"
        }
      }
    },
    "ingress": {
      "type": "object",
      "description": "Ingress configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable ingress",
          "default": false
        },
        "className": {
          "type": "string",
          "description": "Ingress class name"
        },
        "hostname": {
          "type": "string",
          "description": "Ingress hostname"
        },
        "annotations": {
          "type": "object",
          "description": "Ingress annotations",
          "additionalProperties": {
            "type": "string"
          }
        },
        "tls": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable TLS",
              "default": false
            },
            "secretName": {
              "type": "string",
              "description": "TLS secret name"
            }
          }
        }
      }
    },
    "podDisruptionBudget": {
      "type": "object",
      "description": "Pod disruption budget configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable PDB",
          "default": false
        },
        "minAvailable": {
          "oneOf": [
            {"type": "integer", "minimum": 0},
            {"type": "string", "pattern": "^[0-9]+%$"}
          ],
          "description": "Minimum available pods"
        },
        "maxUnavailable": {
          "oneOf": [
            {"type": "integer", "minimum": 0},
            {"type": "string", "pattern": "^[0-9]+%$"}
          ],
          "description": "Maximum unavailable pods"
        }
      }
    },
    "networkPolicy": {
      "type": "object",
      "description": "Network policy configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable network policy",
          "default": false
        }
      }
    }
  },
  "$defs": {
    "probeConfig": {
      "type": "object",
      "properties": {
        "initialDelaySeconds": {
          "type": "integer",
          "minimum": 0,
          "description": "Initial delay before probing"
        },
        "periodSeconds": {
          "type": "integer",
          "minimum": 1,
          "description": "Probe interval"
        },
        "timeoutSeconds": {
          "type": "integer",
          "minimum": 1,
          "description": "Probe timeout"
        },
        "failureThreshold": {
          "type": "integer",
          "minimum": 1,
          "description": "Failure threshold before marking unhealthy"
        },
        "successThreshold": {
          "type": "integer",
          "minimum": 1,
          "description": "Success threshold before marking healthy"
        }
      }
    }
  }
}

# Auth Dockerfile - separate and scalable auth service
FROM python:3.12-slim

ENV PYTHONUNBUFFERED=1

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    git \
    build-essential \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy auth server files and registry module
COPY auth_server/ /app/
COPY registry/ /app/registry/

# Install uv and setup Python environment
RUN pip install --no-cache-dir "uv>=0.9.0,<1.0.0" && \
    uv venv .venv --python 3.12 && \
    . .venv/bin/activate && \
    uv pip install --requirement pyproject.toml

# Create logs directory
RUN mkdir -p /app/logs

# Expose port
EXPOSE 8888

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8888/health || exit 1

# Copy entrypoint script and dependencies
COPY docker/auth-entrypoint.sh /app/auth-entrypoint.sh
COPY docker/download-documentdb-ca-bundle.sh /app/download-documentdb-ca-bundle.sh
RUN chmod +x /app/auth-entrypoint.sh /app/download-documentdb-ca-bundle.sh

# Start the auth server via entrypoint
ENTRYPOINT ["/app/auth-entrypoint.sh"]
